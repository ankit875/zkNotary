{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
     "topo": {
       "dependsOn": ["^topo"]
     },
    "build": {
      "dependsOn": ["^typecheck", "^build"],
      "outputs": [".next/**", "!.next/cache/**", ".output/**", ".vercel/output/**"]
    },
    "start": {
      "dependsOn": ["^topo"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "NOTARY_PROVER_HOST"
  ]
}
